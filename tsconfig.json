{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "declarationDir": "typings",
    "newLine": "lf"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test/**/*", ".idea/**/*", ".eslintignore", ".eslintrc.js", ".gitignore", ".prettierrc.js", "bitbucket-pipelines.yml"]
}
